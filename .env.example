# Bitcoin Tipping Application Environment Variables
# Copy this file to .env and modify the values as needed

# Database Configuration
# MongoDB connection string - database name is extracted from the URI
# Format: mongodb://[username:password@]host[:port]/database_name
MONGODB_URI=mongodb://localhost:27017/bitcoin_tipping

# Flask Configuration
# Set to 'development' for debug mode
FLASK_ENV=development

# Set to 'true' to enable Flask debug mode
FLASK_DEBUG=true

# Logging
# Set log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO
